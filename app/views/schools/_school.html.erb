<div id="<%= dom_id school %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">School name:</strong>
    <%= school.school_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">City:</strong>
    <%= school.city %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Street:</strong>
    <%= school.street %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Building number:</strong>
    <%= school.building_number %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Post code:</strong>
    <%= school.post_code %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this school", school, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this school', edit_school_path(school), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
